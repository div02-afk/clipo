{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",

    "distDir": "../dist"
  },
  "package": {
    "productName": "clipo",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": true,
        "copyFile": false,
        "createDir": false,
        "exists": true,
        "readDir": true,
        "readFile": true,
        "removeDir": false,
        "removeFile": false,
        "renameFile": false,
        "scope": ["$DOCUMENT/*","$DOCUMENT/clipo/*"],
        "writeFile": true
      },
      "path": {
        "all": true
      },
      "app": {
        "all": true
      }
    },
    "windows": [
      {
        "label": "main",
        "title": "clipo",
        "width": 800,
        "height": 600,
        "url": "http://localhost:1420"
      }
    ],
    "security": {
      "csp": null
    },

    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.clipo.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
